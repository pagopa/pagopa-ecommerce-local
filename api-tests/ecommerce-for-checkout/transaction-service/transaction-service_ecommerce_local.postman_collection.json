{
	"info": {
		"_postman_id": "d6f471b3-4be6-44bc-a0a0-8080c51f6468",
		"name": "Transaction service for local eCommerce",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "24209240"
	},
	"item": [
		{
			"name": "Nuova transaction NM3",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Payment Request response HTTP code 200\", () => {",
							"  pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Payment Request TRANSACTION_ID valued in response\", () => {",
							"  const responseJson = pm.response.json();",
							"  pm.environment.set(\"TRANSACTION_ID\", responseJson.transactionId);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"rptId\": \"{{RPT_ID}}\",\n    \"paymentContextCode\" : \"{{PAYMENT_CONTEXT_CODE}}\",\n    \"email\": \"{{EMAIL}}\",\n    \"amount\" : {{AMOUNT}}\n}\n",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "http://{{HOSTNAME}}/transactions",
					"protocol": "http",
					"host": [
						"{{HOSTNAME}}"
					],
					"path": [
						"transactions"
					]
				}
			},
			"response": []
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	]
}