		{
			"name": "Get last payment usage saved (guest)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"[pagopa-user-stats-service] Get user last payment method used for guest\", () => {",
							"  const responseJson = pm.response.json();",
							"  const type = responseJson.type;",
							"  pm.expect(type).to.equals(\"guest\");",
							"  pm.expect(responseJson.walletId).to.be.undefined;",
							"  pm.expect(responseJson.paymentMethodId).to.equals(pm.environment.get(\"PAYMENT_METHOD_ID\"));",
							"  pm.response.to.have.status(200);",
							"});",
							""
